<%# <h1>Companies#index</h1>
<p>Find me in app/views/companies/index.html.erb</p> %>

<h1>Welcome to my companies</h1>
<%= link_to 'New company', new_company_path %>

<table>
  <tr>
    <th>name</th>
    <th>email</th>
    <th>phone_no</th>
    <th>cin</th>
    <th>gst</th>
    <th>pan</th>
    <th></th>
  </tr>
 
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.email %></td>
      <td><%= company.phone_no %></td>
      <td><%= company.gst %></td>
      <td><%= company.cin %></td>
      <td><%= company.pan %></td>

      <td><%= link_to 'Show', company_path(company) %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
      <td><%= link_to 'Destroy', company_path(company),
              data: { turbo_method: :delete,:confirm => 'Are you sure?'}, 
              :method => :delete %></td>

              
    </tr>
  <% end %>
<table/>